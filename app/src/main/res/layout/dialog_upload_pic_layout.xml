<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_white_top_dialogbg_shape"
    android:orientation="vertical"
    tools:layout_margin="@dimen/height_10">


    <TextView
        android:id="@+id/tv_select_avatar_take_a_photo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_comm_white_pressed_bg"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/textColor3"
        android:textSize="@dimen/textSize_16"
        tools:visibility="visible" />

    <View
        android:id="@+id/second_split_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorF5F5F5"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tv_select_avatar_select_from_album"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_comm_white_pressed_bg"
        android:gravity="center"
        android:text="从相册选择"
        android:textColor="@color/textColor3"
        android:textSize="@dimen/textSize_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorF5F5F5" />

    <TextView
        android:id="@+id/tv_select_avatar_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_comm_white_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/textColor3"
        android:textSize="@dimen/textSize_16" />

</LinearLayout>